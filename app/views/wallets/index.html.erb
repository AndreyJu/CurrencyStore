<p id="notice"><%= notice %></p>

<h1>кошельки</h1>
<div id="wallets">
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Назва валюти</th>
      <th>Кількість</th>
      <th>Опис</th>
      <th>Коммісія за введення коштів</th>
      <th>Коммісія за виведення</th>
      <th>Вартість транзакції</th>
      <th>Максимальний транш</th>
      <th>Мінімальний транш</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= wallet.id %></td>
        <td><%= wallet.wallet_name %></td>
        <td><%= wallet.amount %></td>
        <td><%= wallet.description %></td>
        <td><%= wallet.commission_for_deposit %></td>
        <td><%= wallet.commission_for_deduction %></td>
        <td><%= wallet.transaction_costs %></td>
        <td><%= wallet.max_tranche %></td>
        <td><%= wallet.min_tranche %></td>
        <td><%= wallet.activity_status %></td>
        <td><%= link_to 'Show', wallet %></td>
        <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
        <%#=link_to 'Видалити', wallet, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


